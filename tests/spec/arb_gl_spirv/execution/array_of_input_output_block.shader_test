[vertex shader]
#version 450

out block {
    vec4 v;
    vec4 v2;
} x[2];

layout(location=0) in vec4 piglit_vertex;

void main() {
  gl_Position = piglit_vertex;

  x[0].v  = vec4(0.0, 0.1, 0.0, 0.1);
  x[0].v2 = vec4(0.0, 0.2, 0.0, 0.2);

  x[1].v  = vec4(0.0, 0.3, 0.0, 0.3);
  x[1].v2 = vec4(0.0, 0.4, 0.0, 0.5);
}

