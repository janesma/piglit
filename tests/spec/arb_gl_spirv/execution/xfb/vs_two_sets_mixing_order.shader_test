[vertex shader]
#version 150
#extension GL_ARB_enhanced_layouts: require

layout(xfb_buffer = 1, xfb_offset = 0) out float x1_out;
layout(xfb_buffer = 2, xfb_offset = 0) out float y1_out;
layout(xfb_buffer = 1, xfb_offset = 4) out float x2_out[2];
layout(xfb_buffer = 2, xfb_offset = 4) out vec4 y2_out;
layout(xfb_buffer = 1, xfb_offset = 12) out vec3 x3_out;


void main() {
  gl_Position = vec4(0.0);
  x1_out = 11.0;
  x2_out[0] = 10.0;
  x2_out[1] = 9.0;
  x3_out = vec3(8.0, 7.0, 6.0);
  y1_out = 5.0;
  y2_out = vec4(4.0, 3.0, 2.0, 1.0);
}

[test]
xfb buffer object 1 64
xfb buffer object 2 64

xfb draw arrays GL_POINTS 0 1

verify query_object GL_PRIMITIVES_GENERATED 1
verify query_object GL_TRANSFORM_FEEDBACK_PRIMITIVES_WRITTEN 1

expected buffer 64
expected buffer float 0 11.0
expected buffer float 1 10.0
expected buffer float 2 9.0
expected buffer float 3 8.0
expected buffer float 4 7.0
expected buffer float 5 6.0

probe xfb buffer float 1 5

expected buffer 64 # Not really needed, just to clean.
expected buffer float 0 5.0
expected buffer float 1 4.0
expected buffer float 2 3.0
expected buffer float 3 2.0
expected buffer float 4 1.0

probe xfb buffer float 2 5
verify program_query GL_TRANSFORM_FEEDBACK_VARYINGS 5

#Note, the following assumes that the driver would assign buffer_index
#in order with respect to the existing xfb_buffer.

verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (1 0)  GL_TRANSFORM_FEEDBACK_BUFFER_INDEX 0
verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (1 4)  GL_TRANSFORM_FEEDBACK_BUFFER_INDEX 0
verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (1 12)  GL_TRANSFORM_FEEDBACK_BUFFER_INDEX 0

verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (2 0)  GL_TRANSFORM_FEEDBACK_BUFFER_INDEX 1
verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (2 4)  GL_TRANSFORM_FEEDBACK_BUFFER_INDEX 1