void main() {
    outcolor = base * multiplier;
}

[test]
clear color 1.0 0.0 0.0 0.0
clear

uniform vec4 0 0.2 0.1 0.1 1.6
uniform vec4 1 0.5 2.0 3.0 0.25

draw rect -1 -1 2 2
probe all rgba 0.1 0.2 0.3 0.4
