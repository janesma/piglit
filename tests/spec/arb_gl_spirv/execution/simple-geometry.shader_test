[geometry shader]
#version 430
#extension GL_ARB_geometry_shader4: enable

layout (triangles) in;
layout (triangle_strip, max_vertices=3) out;

void main () {
 int i;
 for (i = 0; i < 3; i++) {
   gl_Position = gl_in[i].gl_Position;
   EmitVertex();
 }
}


