[vertex shader]
#version 450
#extension GL_ARB_enhanced_layouts: require

layout(xfb_offset = 0) out float x1_out;
layout(xfb_offset = 4) out float x2_out[2];
layout(xfb_offset = 12) out vec3 x3_out;
layout(xfb_buffer = 2) out;
layout(xfb_offset = 0, xfb_buffer = 2) out float y1_out;
layout(xfb_offset = 4) out vec4 y2_out;

void main() {
  gl_Position = vec4(0.0);
  x1_out = 1.0;
  x2_out[0] = 2.0;
  x2_out[1] = 3.0;
  x3_out = vec3(4.0, 5.0, 6.0);
  y1_out = 7.0;
  y2_out = vec4(8.0, 9.0, 10.0, 11.0);
}

[test]
xfb buffer object 0 64
xfb buffer object 2 64

xfb draw arrays GL_POINTS 0 1

# Queries --

# - GetProgramInterfaceiv(.., pname=MAX_NAME_LENGTH, ..) -> params = 1
verify program_interface_query interface GL_TRANSFORM_FEEDBACK_VARYING GL_MAX_NAME_LENGTH 1

# - GetProgramResourceIndex(.., name) -> INVALID_INDEX
verify program_interface_query resourceIndex GL_TRANSFORM_FEEDBACK_VARYING "" GL_INVALID_INDEX

# - GetProgramResourceName(.., length, name) -> length=0, name = ""
verify program_interface_query resourceName GL_TRANSFORM_FEEDBACK_VARYING (0 0)  0 ""
verify program_interface_query resourceName GL_TRANSFORM_FEEDBACK_VARYING (0 4)  0 ""
verify program_interface_query resourceName GL_TRANSFORM_FEEDBACK_VARYING (0 12) 0 ""
verify program_interface_query resourceName GL_TRANSFORM_FEEDBACK_VARYING (2 0)  0 ""
verify program_interface_query resourceName GL_TRANSFORM_FEEDBACK_VARYING (2 4)  0 ""

# - GetProgramResourceiv(.., props=NAME_LENGTH, ..) -> params = 1
verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (0 0)  GL_NAME_LENGTH 1
verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (0 4)  GL_NAME_LENGTH 1
verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (0 12) GL_NAME_LENGTH 1
verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (2 0)  GL_NAME_LENGTH 1
verify program_interface_query resourceByData GL_TRANSFORM_FEEDBACK_VARYING (2 4)  GL_NAME_LENGTH 1

