[fragment shader]
#version 430

out vec4 color;
layout(early_fragment_tests) in;
layout(std430, binding = 0) buffer MaskOutput {
	int data[];
} mask_output;

void main() {
	int index = int(gl_FragCoord.y) * 160 + int(gl_FragCoord.x);
	atomicOr(mask_output.data[index], gl_SampleMaskIn[0]);
	color = vec4(0.0, 1.0, 0.0, 1.0);
}
